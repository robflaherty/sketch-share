{
  "name": "sketch-share",
  "description": "Sketch plugin that exports artboards and generates an HTML file linking to each one",
  "version": "0.2.0",
  "engines": {
    "sketch": ">=49.0"
  },
  "skpm": {
    "name": "Sketch Share",
    "manifest": "src/manifest.json",
    "main": "sketch-share.sketchplugin",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.7.0"
  },
  "author": "Rob Flaherty <rob@parsnip.io>",
  "dependencies": {
    "@skpm/dialog": "^0.3.0",
    "@skpm/fs": "^0.2.5",
    "@skpm/os": "^0.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robflaherty/sketch-share.git"
  }
}
